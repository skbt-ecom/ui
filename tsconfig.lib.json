{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"]
    },
    "target": "es6",
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "es2016", "esnext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "jsx": "react"
  },
  "exclude": [
    "lib",
    ".cache",
    "node_modules",
    "src/**/*.stories.ts",
    "src/**/*.test.ts",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
